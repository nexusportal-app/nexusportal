{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "references": [
    {
      "path": "../demo-workspace-init"
    },
    {
      "path": "../form-helper"
    },
    {
      "path": "../client-core"
    },
    {
      "path": "../client-datatable"
    },
    {
      "path": "../database-column"
    },
    {
      "path": "../client-i18n"
    },
    {
      "path": "../xls-form-editor"
    },
    {
      "path": "../odk-web-form-wrapper"
    },
    {
      "path": "../api-sdk"
    },
    {
      "path": "../common"
    }
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
